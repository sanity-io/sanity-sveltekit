{
  "name": "sanity-sveltekit-monorepo",
  "private": true,
  "scripts": {
    "build": "pnpm run build:apps && pnpm run build:packages",
    "build:apps": "turbo build --filter=./apps/*",
    "build:packages": "turbo build --filter=./packages/*",
    "check": "pnpm run check:apps && npm run check:packages",
    "check:apps": "turbo check --filter=./apps/*",
    "check:packages": "turbo check --filter=./packages/*",
    "predev": "turbo build",
    "dev": "turbo dev",
    "format": "prettier --cache --write .",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "prepare": "turbo prepare",
    "test": "turbo test",
    "typegen": "turbo typegen"
  },
  "devDependencies": {
    "@eslint/compat": "^1.4.0",
    "@eslint/js": "^9.37.0",
    "@sanity/prettier-config": "^2.0.1",
    "dotenv-cli": "^10.0.0",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-svelte": "^3.12.4",
    "globals": "^16.4.0",
    "prettier": "^3.6.2",
    "prettier-plugin-packagejson": "2.5.19",
    "prettier-plugin-svelte": "^3.4.0",
    "turbo": "^2.5.8",
    "typescript-eslint": "^8.46.0"
  },
  "packageManager": "pnpm@10.18.2",
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ],
    "overrides": {
      "@sanity/sveltekit": "workspace:*"
    }
  }
}
